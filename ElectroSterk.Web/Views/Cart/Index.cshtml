@model IEnumerable<Entities.Cart>

@{
    ViewBag.Title = "Cart Details";
    int count = 1;
}

<h2>Cart Details</h2>

@if (ViewBag.Message != null)
{
    <h3> @ViewBag.Message</h3>
}
else
{
    <table class="table">
        <tr>

            <th>
                Name
            </th>
            <th>
                Quantity
            </th>
            <th>
                Price
            </th>
            <th>
                Image
            </th>
            <th>

            </th>
            <th>
                Total
            </th>

            <th>

            </th>

        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ProductName)
                </td>
                <td class="quantity@(item.ProductId)">
                    @Html.DisplayFor(modelItem => item.Quantity)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    <img src="/Images/Uploads/Products/@item.ProductId/Thumbs/@item.Image" />
                </td>

                <td>
                    <a href="#" class="increment-product" data-id="@item.ProductId">+</a> <br /><br />
                    <a href="#" class="decrement-product" data-id="@item.ProductId">-</a>  <br /><br />
                    <a href="#" class="remove-product" data-id="@item.ProductId">Remove</a>
                </td>
                <td class="total@(item.ProductId)">
                    @Html.DisplayFor(modelItem => item.Total)
                </td>
            </tr>
        }

        <tr>
            <td></td>
            <td></td>
            <td></td>
            <td></td>
            <td></td>
            <td></td>
            <td class="grandtotal"><b>Grand total</b><span> @ViewBag.GrandTotal</span></td>
        </tr>
    </table>
    <div class="paypaldiv">
        <form class="paypalform" action="https://www.paypal.com/cgi-bin/webscr" method="post">
            <input type="hidden" name="cmd" value="_cart">
            <input type="hidden" name="upload" value="1">
            <input type="hidden" name="business" value="sb-csezj2177384@business.example.com">

            @foreach (var item in Model)
            {
                <input type="hidden" name="item_name_@count" value="@item.ProductName">
                <input type="hidden" name="amount_@count" value="@item.Price">
                <input type="hidden" name="quantity_@count" value="@item.Quantity">
                count++;
            }


            <input type="hidden" name="currency_code" value="EUR">

            <input type="image" src="http://www.sandbox.paypal.com/en_US/i/btn/x-click-but01.gif" name="submit" alt="Make payments with PayPal - it's fast, free and secure!">
        </form>
    </div>
    
    <br />

    <a href="#" class="placeorder btn btn-primary pull-right">Checkout</a>
}

@section Scripts {


    <script>

        $(function () {

            /////////
            $("a.increment-product").click(function (e) {
                e.preventDefault();

                var $this = $(this);
                var productId = $(this).data("id");
                var url = "/cart/IncrementProduct";

                $.getJSON(url,
                    { productId: productId },
                    function(data) {
                        if (data.quantity == 0) {
                            $this.parent().parent.fadeOut("fast",
                                function() {
                                    location.reload();
                                });
                        } else {
                            $("td.quantity" + productId).html(data.quantity);
                            var price = data.quantity * data.price;
                            var priceHtml = "$" + price.toFixed(2);

                            $("td.total" + productId).html(priceHtml);

                            var gt = parseFloat($("td.grandtotal span").text());
                            var grandtotal = (gt + data.price).toFixed(2);

                            $("td.grandtotal span").text(grandtotal);
                        }


                    }).done(function(data) {
                        var url2 = "/cart/PaypalPartial";

                        $.get(url2,
                            { },
                            function (data) {
                                $('div.paypaldiv').html(data);
                            });
                });
            });

            ////////

            $("a.decrement-product").click(function (e) {
                e.preventDefault();

                var productId = $(this).data("id");
                var url = "/cart/DecrementProduct";

                $.getJSON(url,
                    { productId: productId },
                    function(data) {
                        $("td.quantity" + productId).html(data.quantity);
                        var price = data.quantity * data.price;
                        var priceHtml = "$" + price.toFixed(2);

                        $("td.total" + productId).html(priceHtml);

                        var gt = parseFloat($("td.grandtotal span").text());
                        var grandtotal = (gt - data.price).toFixed(2);

                        $("td.grandtotal span").text(grandtotal);
                    }).done(function(data) {
                    $.get(url2,
                        { },
                        function (data) {
                            $('div.paypaldiv').html(data);
                        });
                });
            });
            ////////////////

            $("a.remove-product").click(function (e) {
                e.preventDefault();

                var productId = $(this).data("id");
                var url = "/cart/RemoveProduct";

                $.get(url,
                    { productId: productId },
                    function (data) {
                        location.reload();
                    });
            });
            /////////////////////////////// Order
            
            $("a.placeorder").click(function (e) {
                e.preventDefault();

                var url = "/cart/PlaceOrder";

                $(".ajaxbg").show();

                $.post(url,
                    {  },
                    function (data) {
                        $(".ajaxbg span").text("Thank you. you will be now redirected to paypal ");
                        setTimeout(function() {
                                $('form input[name="submit"]').click();
                            },
                            2000);
                    });
            });
            ///////////////////////////////
        });

    </script>
}