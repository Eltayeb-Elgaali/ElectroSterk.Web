<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Admin Panel</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar  navbar-default">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a href="/" class="navbar-brand " target="_blank"> <img id="logo" src="~/Content/img/logo.png" /> </a>
            </div>
            <div class="navbar-collapse collapse">
                <ul id="admin-area-links" class="nav navbar-nav navbar-right">
                    <li><a class="active" href="/admin/pages">Pagina's</a></li>
                    <li><a href="/admin/pages/EditSidebar">Zijbalken</a></li>
                    <li><a href="/admin/Shop/Categories">Categorieën</a></li>
                    <li><a href="/admin/Shop/Products">Producten</a></li>
                    <li><a href="/admin/Shop/Orders">Bestellingen</a></li>
                    <li><a href="/Admin/Dashboard">Dashboard</a></li>
                </ul>

            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        
    </div>

    @Scripts.Render("~/bundles/scripts")
    
    @RenderSection("scripts", required: false)
</body>
</html>
