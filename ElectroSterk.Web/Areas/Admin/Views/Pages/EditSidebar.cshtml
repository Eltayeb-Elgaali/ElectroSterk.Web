@model Entities.Sidebar

@{
    ViewBag.Title = "Edit Sidebar";
}

<h2 style="margin-top: 20px;">Edit Sidebar</h2>

@if (TempData["SM"] != null)
{
    <div class="alert alert-success">
        @TempData["SM"]
    </div>
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)

    <div class="form-group">
        
        <label class="control-label col-md-2" for="HasSidbar">Sidebar</label>
        <div class="col-md-10">
            @Html.TextAreaFor(model => model.Body, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Body, "", new { @class = "text-danger" })
        </div>
    </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Edit" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>

</div>

@section Scripts{
    @*drag and drop this script from scripts folder*@ 
    <script src="~/Scripts/ckeditor/ckeditor.js"></script>

    <script>
        // enable Ckeditor in this page 
        // set allowHtml in the entities classes
        CKEDITOR.replace("Body");
    </script>
}
